<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.erikstackelberg.cocktailhour">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.DrinkDetailActivity"
            android:label="@string/title_activity_drink_detail"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.erikstackelberg.cocktailhour.MainActivity" />
        </activity>
        <activity
            android:name=".activities.IngredientDetailActivity"
            android:label="@string/title_activity_ingredient_detail"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.erikstackelberg.cocktailhour.MainActivity" />
        </activity>
        <activity
            android:name=".activities.NewIngredientActivity"
            android:label="@string/title_activity_new_ingredient"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.erikstackelberg.cocktailhour.MainActivity" />
        </activity>
        <activity
            android:name=".activities.NewDrinkActivity"
            android:label="@string/title_activity_new_drink"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.erikstackelberg.cocktailhour.MainActivity" />
        </activity>
    </application>

</manifest>